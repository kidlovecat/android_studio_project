    <TextView
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Đăng nhập"
        android:textAlignment="center"
        android:textSize="30dp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id1"
        android:hint="username"

        />

    <EditText
        android:id="@+id/id3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id2"
        android:hint="password"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/dangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dang nhap"
        android:layout_below="@id/id3"
        android:layout_marginLeft="40dp"
        />
    <Button
        android:id="@+id/quenmk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quen MK"
        android:layout_toRightOf="@id/dangnhap"
        android:layout_below="@id/id3"
        />
    <Button
        android:id="@+id/trogiup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tro giup"
        android:layout_toRightOf="@id/quenmk"
        android:layout_below="@id/id3"
        />
</RelativeLayout>