<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_tech1"
        android:src="@drawable/android_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
    <TextView
        android:id="@+id/tname1"
        android:text="Android"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/img_tech1"
        android:layout_alignTop="@id/img_tech1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tsub1"
        android:text="SUB Android"
        android:textSize="13dp"
        android:layout_alignLeft="@id/tname1"
        android:layout_below="@id/tname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tdes1"
        android:text="DES Android"
        android:textSize="14dp"
        android:layout_below="@id/tsub1"
        android:layout_alignLeft="@id/tname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>